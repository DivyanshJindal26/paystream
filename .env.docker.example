# Docker Environment Configuration
# Copy this file to .env.docker and fill in your values

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=paystream_secure_password
MONGO_DB=paystream
MONGO_PORT=27017

# Backend Configuration
BACKEND_PORT=5000
NODE_ENV=production
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:5000
VITE_ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# Oracle Configuration (REQUIRED for off-ramp functionality)
# This private key is used by both backend and frontend
ORACLE_PRIVATE_KEY=your_oracle_private_key_here
